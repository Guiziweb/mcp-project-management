{% extends 'admin/base.html.twig' %}

{% block title %}Users{% endblock %}

{% block content %}
<div class="max-w-6xl">
    <!-- Header -->
    <div class="flex items-center justify-between mb-8">
        <div>
            <h1 class="text-2xl font-semibold">Users</h1>
            <p class="text-neutral-500 mt-1">Manage users in your organization</p>
        </div>

        <!-- Search -->
        <form method="get" class="flex items-center gap-2">
            <div class="relative">
                <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-neutral-500" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z"/>
                </svg>
                <input type="text" name="q" value="{{ search }}" placeholder="Search users..."
                       class="pl-10 pr-4 py-2 bg-neutral-800 border border-neutral-700 rounded-lg text-white placeholder-neutral-500 focus:outline-none focus:border-neutral-500 w-64">
            </div>
            {% if search %}
                <a href="{{ path('admin_users') }}" class="px-3 py-2 text-neutral-400 hover:text-white">Clear</a>
            {% endif %}
        </form>
    </div>

    <!-- Table -->
    <div class="bg-neutral-900 rounded-xl border border-neutral-800 overflow-hidden">
        <table class="w-full">
            <thead>
                <tr class="border-b border-neutral-800">
                    <th class="px-6 py-4 text-left text-sm font-medium text-neutral-400">User</th>
                    <th class="px-6 py-4 text-left text-sm font-medium text-neutral-400">Status</th>
                    <th class="px-6 py-4 text-left text-sm font-medium text-neutral-400">Role</th>
                    <th class="px-6 py-4 text-left text-sm font-medium text-neutral-400">Last seen</th>
                    <th class="px-6 py-4 text-right text-sm font-medium text-neutral-400">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-neutral-800">
                {% for user in users %}
                <tr class="hover:bg-neutral-800/30 transition-colors">
                    <td class="px-6 py-4">
                        <div class="flex items-center gap-3">
                            <div class="w-9 h-9 bg-neutral-800 rounded-full flex items-center justify-center text-sm font-medium">
                                {{ user.email|first|upper }}
                            </div>
                            <div>
                                <p class="font-medium">{{ user.email }}</p>
                                {% if user.hasProviderCredentials %}
                                    <p class="text-xs text-neutral-500">API key configured</p>
                                {% else %}
                                    <p class="text-xs text-amber-500">No API key</p>
                                {% endif %}
                            </div>
                        </div>
                    </td>
                    <td class="px-6 py-4">
                        {% if user.pending %}
                            <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium bg-amber-500/10 text-amber-400 border border-amber-500/20">
                                <svg class="w-3 h-3" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                                Pending
                            </span>
                        {% elseif user.connected %}
                            <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium bg-green-500/10 text-green-400 border border-green-500/20">
                                <span class="w-1.5 h-1.5 bg-green-400 rounded-full animate-pulse"></span>
                                Connected
                            </span>
                        {% else %}
                            <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium bg-neutral-800 text-neutral-400">
                                Offline
                            </span>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4">
                        {% if 'ROLE_SUPER_ADMIN' in user.roles %}
                            <span class="px-2.5 py-1 rounded-full text-xs font-medium bg-purple-500/10 text-purple-400 border border-purple-500/20">
                                Super Admin
                            </span>
                        {% elseif 'ROLE_ORG_ADMIN' in user.roles %}
                            <span class="px-2.5 py-1 rounded-full text-xs font-medium bg-blue-500/10 text-blue-400 border border-blue-500/20">
                                Org Admin
                            </span>
                        {% else %}
                            <span class="px-2.5 py-1 rounded-full text-xs font-medium bg-neutral-800 text-neutral-400">
                                User
                            </span>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 text-neutral-500 text-sm">
                        {% if user.lastSeenAt %}
                            {{ user.lastSeenAt|date('M j, H:i') }}
                        {% else %}
                            <span class="text-neutral-600">Never</span>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 text-right">
                        <div class="flex items-center justify-end gap-2">
                            {% if user.pending %}
                            <form method="post" action="{{ path('admin_users_approve', {id: user.id}) }}" class="inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('approve-user-' ~ user.id) }}">
                                <button type="submit"
                                   class="inline-flex items-center gap-1.5 px-3 py-1.5 text-sm bg-green-600 hover:bg-green-500 text-white rounded-lg transition-colors">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5"/>
                                    </svg>
                                    Approve
                                </button>
                            </form>
                            {% endif %}
                            <a href="{{ path('admin_users_edit', {id: user.id}) }}"
                               class="inline-flex items-center gap-1.5 px-3 py-1.5 text-sm text-neutral-400 hover:text-white hover:bg-neutral-800 rounded-lg transition-colors">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10"/>
                                </svg>
                                Edit
                            </a>
                        </div>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="5" class="px-6 py-12 text-center text-neutral-500">
                        No users found
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    {% if users.pageCount > 1 %}
    <div class="flex items-center justify-between mt-6">
        <p class="text-sm text-neutral-500">
            Showing {{ users.currentPageOffsetStart + 1 }} to {{ users.currentPageOffsetEnd }} of {{ users.totalItemCount }} users
        </p>
        <nav class="flex items-center gap-1">
            {% if users.currentPageNumber > 1 %}
                <a href="{{ path('admin_users', {page: users.currentPageNumber - 1, q: search}) }}"
                   class="px-3 py-2 text-sm text-neutral-400 hover:text-white hover:bg-neutral-800 rounded-lg transition-colors">
                    Previous
                </a>
            {% endif %}

            {% for page in users.paginationData.pagesInRange %}
                {% if page == users.currentPageNumber %}
                    <span class="px-3 py-2 text-sm bg-white text-neutral-900 rounded-lg font-medium">{{ page }}</span>
                {% else %}
                    <a href="{{ path('admin_users', {page: page, q: search}) }}"
                       class="px-3 py-2 text-sm text-neutral-400 hover:text-white hover:bg-neutral-800 rounded-lg transition-colors">
                        {{ page }}
                    </a>
                {% endif %}
            {% endfor %}

            {% if users.currentPageNumber < users.pageCount %}
                <a href="{{ path('admin_users', {page: users.currentPageNumber + 1, q: search}) }}"
                   class="px-3 py-2 text-sm text-neutral-400 hover:text-white hover:bg-neutral-800 rounded-lg transition-colors">
                    Next
                </a>
            {% endif %}
        </nav>
    </div>
    {% endif %}
</div>
{% endblock %}