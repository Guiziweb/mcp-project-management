{% extends 'admin/base.html.twig' %}

{% block title %}Create Invite Link{% endblock %}

{% block content %}
<div class="max-w-2xl">
    <!-- Header -->
    <div class="mb-8">
        <a href="{{ path('admin_invites') }}" class="inline-flex items-center gap-2 text-neutral-400 hover:text-white mb-4 transition-colors">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18"/>
            </svg>
            Back to Invite Links
        </a>
        <h1 class="text-2xl font-semibold">Create Invite Link</h1>
        <p class="text-neutral-500 mt-1">Generate a link to invite new users</p>
    </div>

    <!-- Form -->
    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
        <div class="bg-neutral-900 rounded-xl border border-neutral-800 p-6 space-y-6">
            <!-- Label -->
            <div>
                <label class="block text-sm font-medium text-neutral-300 mb-2">Label (optional)</label>
                {{ form_widget(form.label, {'attr': {
                    'class': 'w-full px-4 py-3 bg-neutral-800 border border-neutral-700 rounded-lg text-white placeholder-neutral-500 focus:outline-none focus:border-white focus:ring-1 focus:ring-white transition-colors'
                }}) }}
                <p class="mt-2 text-sm text-neutral-500">A friendly name to identify this link</p>
            </div>

            <!-- Expires At -->
            <div>
                <label class="block text-sm font-medium text-neutral-300 mb-2">Expires At</label>
                {{ form_widget(form.expiresAt, {'attr': {
                    'class': 'w-full px-4 py-3 bg-neutral-800 border border-neutral-700 rounded-lg text-white focus:outline-none focus:border-white focus:ring-1 focus:ring-white transition-colors'
                }}) }}
            </div>

            <!-- Max Uses -->
            <div>
                <label class="block text-sm font-medium text-neutral-300 mb-2">Maximum number of uses</label>
                {{ form_widget(form.maxUses, {'attr': {
                    'class': 'w-full px-4 py-3 bg-neutral-800 border border-neutral-700 rounded-lg text-white placeholder-neutral-500 focus:outline-none focus:border-white focus:ring-1 focus:ring-white transition-colors'
                }}) }}
                <p class="mt-2 text-sm text-neutral-500">Leave empty for unlimited</p>
            </div>
        </div>

        <!-- Actions -->
        <div class="flex items-center justify-end gap-3 pt-4">
            <a href="{{ path('admin_invites') }}" class="px-4 py-2 text-sm text-neutral-400 hover:text-white transition-colors">
                Cancel
            </a>
            <button type="submit" class="px-6 py-2 bg-white text-neutral-900 font-medium rounded-lg hover:bg-neutral-200 transition-colors">
                Create Link
            </button>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}