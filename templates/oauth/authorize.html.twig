<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Connect - MCP</title>
    {{ importmap('app') }}
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Inter', 'system-ui', 'sans-serif'],
                    },
                }
            }
        }
    </script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
</head>
<body class="min-h-screen bg-neutral-950 text-neutral-100 antialiased font-sans">
    <div class="min-h-screen flex">
        <!-- Left Panel -->
        <div class="hidden lg:flex lg:w-[45%] border-r border-neutral-800 flex-col justify-between p-10">
            <div>
                <!-- Logo -->
                <div class="flex items-center gap-2.5">
                    <div class="w-8 h-8 bg-white rounded-lg flex items-center justify-center">
                        <svg class="w-5 h-5 text-neutral-900" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                        </svg>
                    </div>
                    <span class="text-lg font-semibold">MCP</span>
                </div>
            </div>

            <div class="max-w-sm">
                <h1 class="text-3xl font-semibold tracking-tight mb-4">
                    Connect your project manager
                </h1>
                <p class="text-neutral-500 leading-relaxed">
                    Link your Redmine instance to enable time tracking and issue management through Claude, Cursor, or any MCP-compatible assistant.
                </p>
            </div>

            <div class="text-sm text-neutral-600">
                Credentials are encrypted end-to-end and never stored.
            </div>
        </div>

        <!-- Right Panel -->
        <div class="flex-1 flex items-center justify-center p-6 lg:p-12">
            <div class="w-full max-w-md">
                <!-- Mobile logo -->
                <div class="lg:hidden flex items-center gap-2.5 mb-10">
                    <div class="w-8 h-8 bg-white rounded-lg flex items-center justify-center">
                        <svg class="w-5 h-5 text-neutral-900" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                        </svg>
                    </div>
                    <span class="text-lg font-semibold">MCP</span>
                </div>

                <!-- User -->
                {% if auth_user_email is defined and auth_user_email %}
                <div class="mb-8 pb-8 border-b border-neutral-800">
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 bg-neutral-800 rounded-full flex items-center justify-center text-sm font-medium">
                            {{ auth_user_email|first|upper }}
                        </div>
                        <div class="flex-1 min-w-0">
                            <p class="text-sm font-medium truncate">{{ auth_user_name|default('User') }}</p>
                            <p class="text-sm text-neutral-500 truncate">{{ auth_user_email }}</p>
                        </div>
                    </div>
                </div>
                {% endif %}

                <!-- Organization Info -->
                {% if organization is defined %}
                <div class="mb-6 pb-6 border-b border-neutral-800">
                    <p class="text-sm text-neutral-500 mb-1">Organization</p>
                    <p class="font-medium">{{ organization.name }}</p>
                    <p class="text-sm text-neutral-400">Redmine</p>
                </div>
                {% endif %}

                <!-- Form -->
                {{ form_start(form, {'attr': {'class': 'space-y-5'}}) }}
                    {% for field in form %}
                        {% if field.vars.name not in ['_token', 'submit'] %}
                        <div>
                            {{ form_label(field, null, {'label_attr': {'class': 'block text-sm font-medium text-neutral-300 mb-1.5'}}) }}
                            {{ form_widget(field, {'attr': {'class': 'w-full bg-neutral-900 border border-neutral-700 rounded-lg px-4 py-3 text-neutral-100 placeholder-neutral-500 focus:outline-none focus:ring-2 focus:ring-neutral-600 focus:border-transparent transition-colors'}}) }}
                            {{ form_errors(field) }}
                            {% if field.vars.help %}
                            <p class="mt-1.5 text-xs text-neutral-500">{{ field.vars.help }}</p>
                            {% endif %}
                        </div>
                        {% endif %}
                    {% endfor %}

                    <button type="submit" class="w-full bg-white text-neutral-900 font-medium py-3 px-4 rounded-lg hover:bg-neutral-200 transition-colors focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-neutral-900 cursor-pointer">
                        Connect
                    </button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</body>
</html>