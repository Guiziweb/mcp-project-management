<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Complete Setup - MCP</title>
    {{ importmap('app') }}
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
</head>
<body class="min-h-screen bg-neutral-950 text-neutral-100 antialiased font-sans">
    <div class="min-h-screen flex">
        <!-- Left Panel -->
        <div class="hidden lg:flex lg:w-[45%] border-r border-neutral-800 flex-col justify-between p-10">
            <div>
                <div class="flex items-center gap-2.5">
                    <div class="w-8 h-8 bg-white rounded-lg flex items-center justify-center">
                        <svg class="w-5 h-5 text-neutral-900" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                        </svg>
                    </div>
                    <span class="text-lg font-semibold">MCP</span>
                </div>
            </div>

            <div class="max-w-sm">
                <h1 class="text-3xl font-semibold tracking-tight mb-4">
                    Join {{ organization.name }}
                </h1>
                <p class="text-neutral-500 leading-relaxed">
                    You're joining the {{ organization.name }} workspace. Enter your {{ organization.providerType|capitalize }} API key to complete setup.
                </p>
            </div>

            <div class="text-sm text-neutral-600">
                Your API key is encrypted and stored securely.
            </div>
        </div>

        <!-- Right Panel -->
        <div class="flex-1 flex items-center justify-center p-6 lg:p-12">
            <div class="w-full max-w-md">
                <!-- Mobile header -->
                <div class="lg:hidden mb-8">
                    <div class="flex items-center gap-2.5 mb-6">
                        <div class="w-8 h-8 bg-white rounded-lg flex items-center justify-center">
                            <svg class="w-5 h-5 text-neutral-900" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                            </svg>
                        </div>
                        <span class="text-lg font-semibold">MCP</span>
                    </div>
                    <h1 class="text-2xl font-semibold mb-2">Join {{ organization.name }}</h1>
                </div>

                <!-- User -->
                <div class="mb-8 pb-8 border-b border-neutral-800">
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 bg-neutral-800 rounded-full flex items-center justify-center text-sm font-medium">
                            {{ google_user_email|first|upper }}
                        </div>
                        <div class="flex-1 min-w-0">
                            <p class="text-sm font-medium truncate">{{ google_user_name|default('User') }}</p>
                            <p class="text-sm text-neutral-500 truncate">{{ google_user_email }}</p>
                        </div>
                    </div>
                </div>

                <!-- Organization info -->
                <div class="mb-6 p-4 bg-neutral-900 rounded-lg border border-neutral-800">
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 bg-neutral-800 rounded-lg flex items-center justify-center">
                            <span class="text-lg font-semibold">{{ organization.name|first|upper }}</span>
                        </div>
                        <div>
                            <p class="font-medium">{{ organization.name }}</p>
                            <p class="text-sm text-neutral-500">{{ organization.providerType|capitalize }}{% if organization.providerUrl %} &middot; {{ organization.providerUrl }}{% endif %}</p>
                        </div>
                    </div>
                </div>

                <!-- Form -->
                {{ form_start(form, {'attr': {'class': 'space-y-5'}}) }}
                    <div>
                        <label class="block text-sm font-medium text-neutral-300 mb-2">
                            Your {{ organization.providerType|capitalize }} API Key
                        </label>
                        {{ form_widget(form.api_key, {'attr': {
                            'class': 'w-full px-4 py-3 bg-neutral-900 border border-neutral-700 rounded-lg text-white placeholder-neutral-500 focus:outline-none focus:border-white focus:ring-1 focus:ring-white transition-colors',
                            'placeholder': 'Enter your personal API key'
                        }}) }}
                        <p class="mt-2 text-sm text-neutral-500">
                            Find it in your {{ organization.providerType|capitalize }} account settings.
                        </p>
                    </div>

                    {% if form.email is defined %}
                    <div>
                        <label class="block text-sm font-medium text-neutral-300 mb-2">
                            {{ organization.providerType|capitalize }} Email
                        </label>
                        {{ form_widget(form.email, {'attr': {
                            'class': 'w-full px-4 py-3 bg-neutral-900 border border-neutral-700 rounded-lg text-white placeholder-neutral-500 focus:outline-none focus:border-white focus:ring-1 focus:ring-white transition-colors',
                            'placeholder': 'your-email@company.com'
                        }}) }}
                    </div>
                    {% endif %}

                    <button type="submit" class="w-full py-3 px-4 bg-white text-neutral-900 font-medium rounded-lg hover:bg-neutral-200 transition-colors">
                        Complete Setup
                    </button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</body>
</html>