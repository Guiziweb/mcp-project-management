<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Organization - MCP</title>
    {{ importmap('app') }}
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Inter', 'system-ui', 'sans-serif'],
                    },
                }
            }
        }
    </script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
</head>
<body class="min-h-screen bg-neutral-950 text-neutral-100 antialiased font-sans">
    <div class="min-h-screen flex">
        <!-- Left Panel -->
        <div class="hidden lg:flex lg:w-[45%] border-r border-neutral-800 flex-col justify-between p-10">
            <div>
                <!-- Logo -->
                <div class="flex items-center gap-2.5">
                    <div class="w-8 h-8 bg-white rounded-lg flex items-center justify-center">
                        <svg class="w-5 h-5 text-neutral-900" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                        </svg>
                    </div>
                    <span class="text-lg font-semibold">MCP</span>
                </div>
            </div>

            <div class="max-w-sm">
                <h1 class="text-3xl font-semibold tracking-tight mb-4">
                    Set up your workspace in minutes
                </h1>
                <p class="text-neutral-500 leading-relaxed">
                    Connect your project manager and start using Claude or Cursor to track your time and manage your tasks.
                </p>
            </div>

            <div class="space-y-6">
                <!-- AI Agents -->
                <div>
                    <p class="text-xs text-neutral-600 mb-3">AI Assistants</p>
                    <div class="flex items-center gap-5 text-neutral-500">
                        <div class="flex items-center gap-2">
                            <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
                            </svg>
                            <span class="text-xs">Claude</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M5 3l14 9-14 9V3z"/>
                            </svg>
                            <span class="text-xs">Cursor</span>
                        </div>
                    </div>
                </div>
                <!-- Providers -->
                <div>
                    <p class="text-xs text-neutral-600 mb-3">Providers</p>
                    <div class="flex items-center gap-5 text-neutral-500">
                        <div class="flex items-center gap-2">
                            <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
                                <circle cx="12" cy="12" r="10"/>
                            </svg>
                            <span class="text-xs">Redmine</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M12 2L2 12l10 10 10-10L12 2z"/>
                            </svg>
                            <span class="text-xs">Jira</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
                                <rect x="3" y="3" width="18" height="18" rx="2"/>
                            </svg>
                            <span class="text-xs">Monday</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Panel -->
        <div class="flex-1 flex items-center justify-center p-6 lg:p-12">
            <div class="w-full max-w-md">
                <!-- Mobile logo -->
                <div class="lg:hidden flex items-center gap-2.5 mb-10">
                    <div class="w-8 h-8 bg-white rounded-lg flex items-center justify-center">
                        <svg class="w-5 h-5 text-neutral-900" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                        </svg>
                    </div>
                    <span class="text-lg font-semibold">MCP</span>
                </div>

                {% set cursor = form.vars.cursor %}
                {% set currentStep = cursor.currentStep %}
                {% set stepIndex = cursor.stepIndex + 1 %}
                {% set totalSteps = cursor.totalSteps %}

                <!-- Progress Steps -->
                <div class="mb-10">
                    <div class="flex items-center justify-between mb-2">
                        <span class="text-sm text-neutral-400">Step {{ stepIndex }} of {{ totalSteps }}</span>
                    </div>
                    <div class="flex gap-2">
                        {% for i in 1..totalSteps %}
                        <div class="flex-1 h-1 rounded-full {{ i <= stepIndex ? 'bg-white' : 'bg-neutral-800' }}"></div>
                        {% endfor %}
                    </div>
                </div>

                <!-- Step Title -->
                <div class="mb-8">
                    {% if currentStep == 'organization' %}
                    <h2 class="text-2xl font-semibold mb-2">Your organization</h2>
                    <p class="text-neutral-500">What is your agency or company name?</p>
                    {% elseif currentStep == 'provider' %}
                    <h2 class="text-2xl font-semibold mb-2">Your project manager</h2>
                    <p class="text-neutral-500">Which tool do you use to manage your projects?</p>
                    {% endif %}
                </div>

                <!-- Flash Messages -->
                {% for message in app.flashes('error') %}
                <div class="mb-6 p-4 bg-red-900/30 border border-red-800 rounded-lg text-red-200 text-sm">
                    {{ message }}
                </div>
                {% endfor %}

                <!-- Form -->
                {{ form_start(form, {'attr': {'class': 'space-y-5'}}) }}
                    {# Render the current step fields #}
                    {% if currentStep == 'organization' %}
                        {% include 'admin/signup/_organization_step.html.twig' with {form: form[currentStep]} %}
                    {% elseif currentStep == 'provider' %}
                        {% include 'admin/signup/_provider_step.html.twig' with {form: form[currentStep]} %}
                    {% endif %}

                    <!-- Navigation -->
                    <div class="flex gap-3 pt-4">
                        {% if form.navigator is defined %}
                            {% if form.navigator.previous is defined and not cursor.firstStep %}
                                {{ form_widget(form.navigator.previous, {'attr': {'class': 'px-6 py-3 border border-neutral-700 rounded-lg text-neutral-300 hover:bg-neutral-800 transition-colors'}}) }}
                            {% endif %}
                            {% if form.navigator.next is defined and not cursor.lastStep %}
                                {{ form_widget(form.navigator.next, {'attr': {'class': 'flex-1 bg-white text-neutral-900 font-medium py-3 rounded-lg hover:bg-neutral-100 transition-colors'}}) }}
                            {% endif %}
                            {% if form.navigator.finish is defined and cursor.lastStep %}
                                {{ form_widget(form.navigator.finish, {'attr': {'class': 'flex-1 bg-white text-neutral-900 font-medium py-3 rounded-lg hover:bg-neutral-100 transition-colors'}}) }}
                            {% endif %}
                        {% endif %}
                    </div>
                {{ form_end(form) }}

                <!-- Login Link -->
                <div class="mt-8 pt-6 border-t border-neutral-800 text-center">
                    <p class="text-sm text-neutral-500">
                        Already have an account?
                        <a href="{{ path('admin_login') }}" class="text-neutral-300 hover:text-white transition-colors">
                            Sign in
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
