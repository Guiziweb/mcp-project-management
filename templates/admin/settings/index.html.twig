{% extends 'admin/base.html.twig' %}

{% block title %}Settings{% endblock %}

{% block content %}
<div class="max-w-4xl">
    <div class="mb-8">
        <h1 class="text-2xl font-semibold">Settings</h1>
        <p class="text-neutral-500 mt-1">Manage your account and MCP configuration</p>
    </div>

    <div class="space-y-6">
        <!-- Profile -->
        <div class="bg-neutral-900 rounded-xl border border-neutral-800 p-6">
            <h2 class="text-lg font-medium mb-4">Profile</h2>
            <div class="flex items-center gap-4">
                <div class="w-14 h-14 bg-neutral-800 rounded-full flex items-center justify-center text-xl font-medium">
                    {{ user.email|first|upper }}
                </div>
                <div>
                    <p class="font-medium">{{ user.email }}</p>
                    <p class="text-sm text-neutral-500">{{ user.organization.name }} Â· {{ user.organization.providerType|capitalize }}</p>
                </div>
            </div>
        </div>

        <!-- MCP Configuration -->
        <div class="bg-neutral-900 rounded-xl border border-neutral-800 p-6">
            <h2 class="text-lg font-medium mb-2">MCP Configuration</h2>
            <p class="text-sm text-neutral-500 mb-4">
                Add this to your Claude Desktop, Cursor, or Claude Code config file.
            </p>

            <div class="relative">
                <pre id="mcp-config" class="p-4 bg-neutral-950 rounded-lg text-sm overflow-x-auto border border-neutral-800"><code class="text-green-400">{
  "mcpServers": {
    "{{ user.organization.slug }}": {
      "type": "http",
      "url": "{{ app.request.schemeAndHttpHost }}/mcp"
    }
  }
}</code></pre>
                <button onclick="copyConfig()" class="absolute top-3 right-3 p-2 text-neutral-400 hover:text-white hover:bg-neutral-800 rounded-lg transition-colors" title="Copy to clipboard">
                    <svg id="copy-icon" class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15.666 3.888A2.25 2.25 0 0013.5 2.25h-3c-1.03 0-1.9.693-2.166 1.638m7.332 0c.055.194.084.4.084.612v0a.75.75 0 01-.75.75H9a.75.75 0 01-.75-.75v0c0-.212.03-.418.084-.612m7.332 0c.646.049 1.288.11 1.927.184 1.1.128 1.907 1.077 1.907 2.185V19.5a2.25 2.25 0 01-2.25 2.25H6.75A2.25 2.25 0 014.5 19.5V6.257c0-1.108.806-2.057 1.907-2.185a48.208 48.208 0 011.927-.184"/>
                    </svg>
                    <svg id="check-icon" class="w-4 h-4 hidden text-green-400" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
                    </svg>
                </button>
            </div>

            <p class="mt-3 text-xs text-neutral-500">
                When you connect, you'll be prompted to authenticate with Google.
            </p>
        </div>

        <script>
        function copyConfig() {
            const config = document.getElementById('mcp-config').textContent;
            navigator.clipboard.writeText(config).then(() => {
                document.getElementById('copy-icon').classList.add('hidden');
                document.getElementById('check-icon').classList.remove('hidden');
                setTimeout(() => {
                    document.getElementById('copy-icon').classList.remove('hidden');
                    document.getElementById('check-icon').classList.add('hidden');
                }, 2000);
            });
        }
        </script>

        <!-- API Key -->
        <div class="bg-neutral-900 rounded-xl border border-neutral-800 p-6">
            <h2 class="text-lg font-medium mb-2">API Key</h2>
            <p class="text-sm text-neutral-500 mb-4">
                Your {{ user.organization.providerType|capitalize }} API key is used to authenticate MCP requests.
            </p>

            {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
                <div>
                    <label class="block text-sm font-medium text-neutral-300 mb-2">
                        {{ user.organization.providerType|capitalize }} API Key
                    </label>
                    {{ form_widget(form.api_key, {'attr': {
                        'class': 'w-full px-4 py-3 bg-neutral-800 border border-neutral-700 rounded-lg text-white placeholder-neutral-500 focus:outline-none focus:border-white focus:ring-1 focus:ring-white transition-colors'
                    }}) }}
                    <p class="mt-2 text-sm text-neutral-500">
                        {% if user.hasProviderCredentials %}
                            Leave empty to keep your current key.
                        {% else %}
                            You need to configure your API key to use MCP.
                        {% endif %}
                    </p>
                </div>

                <button type="submit" class="px-6 py-2 bg-white text-neutral-900 font-medium rounded-lg hover:bg-neutral-200 transition-colors">
                    Update API Key
                </button>
            {{ form_end(form) }}
        </div>

        <!-- Active Sessions -->
        <div class="bg-neutral-900 rounded-xl border border-neutral-800 p-6">
            <h2 class="text-lg font-medium mb-2">Active Sessions</h2>
            <p class="text-sm text-neutral-500 mb-4">
                Your MCP connections from Claude Desktop, Cursor, etc.
            </p>

            {% if sessions|length > 0 %}
                <div class="space-y-3">
                    {% set now = date() %}
                    {% for session in sessions %}
                        {% set isActive = date(session.lastActivityAt).timestamp > (now.timestamp - 300) %}
                        <div class="flex items-center justify-between p-3 bg-neutral-800/50 rounded-lg">
                            <div class="flex items-center gap-3">
                                {% if isActive %}
                                    <span class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></span>
                                {% else %}
                                    <span class="w-2 h-2 bg-neutral-600 rounded-full"></span>
                                {% endif %}
                                <div>
                                    <p class="text-sm font-medium">
                                        {{ session.clientInfo|default('Unknown client') }}
                                    </p>
                                    <p class="text-xs text-neutral-500">
                                        Last active: {{ session.lastActivityAt|date('M j, H:i') }}
                                    </p>
                                </div>
                            </div>
                            {% if isActive %}
                                <span class="text-xs text-green-400">Active</span>
                            {% else %}
                                <span class="text-xs text-neutral-500">Idle</span>
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p class="text-neutral-500 text-sm">No active sessions.</p>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}