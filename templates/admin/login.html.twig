<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - MCP Admin</title>
    {{ importmap('app') }}
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Inter', 'system-ui', 'sans-serif'],
                    },
                }
            }
        }
    </script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
</head>
<body class="min-h-screen bg-neutral-950 text-neutral-100 antialiased font-sans">
    <div class="min-h-screen flex">
        <!-- Left Panel -->
        <div class="hidden lg:flex lg:w-[45%] border-r border-neutral-800 flex-col justify-between p-10">
            <div>
                <!-- Logo -->
                <div class="flex items-center gap-2.5">
                    <div class="w-8 h-8 bg-white rounded-lg flex items-center justify-center">
                        <svg class="w-5 h-5 text-neutral-900" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                        </svg>
                    </div>
                    <span class="text-lg font-semibold">MCP</span>
                </div>
            </div>

            <div class="max-w-sm">
                <h1 class="text-3xl font-semibold tracking-tight mb-4">
                    Manage your MCP connections
                </h1>
                <p class="text-neutral-500 leading-relaxed">
                    Invite your teammates, monitor active sessions and configure access to your project manager.
                </p>
            </div>

            <div class="space-y-6">
                <!-- AI Agents -->
                <div>
                    <p class="text-xs text-neutral-600 mb-3">AI Assistants</p>
                    <div class="flex items-center gap-5 text-neutral-500">
                        <div class="flex items-center gap-2">
                            <img src="{{ asset('images/assistants/claude.svg') }}" alt="Claude" class="w-6 h-6 rounded">
                            <span class="text-sm">Claude</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <img src="{{ asset('images/assistants/cursor.svg') }}" alt="Cursor" class="w-6 h-6 rounded">
                            <span class="text-sm">Cursor</span>
                        </div>
                    </div>
                </div>
                <!-- Providers -->
                <div>
                    <p class="text-xs text-neutral-600 mb-3">Providers</p>
                    <div class="flex items-center gap-5 text-neutral-500">
                        <div class="flex items-center gap-2">
                            <img src="{{ asset('images/providers/redmine.svg') }}" alt="Redmine" class="w-6 h-6">
                            <span class="text-sm">Redmine</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <img src="{{ asset('images/providers/jira.svg') }}" alt="Jira" class="w-6 h-6">
                            <span class="text-sm">Jira</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <img src="{{ asset('images/providers/monday.svg') }}" alt="Monday" class="w-6 h-6">
                            <span class="text-sm">Monday</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Panel -->
        <div class="flex-1 flex items-center justify-center p-6 lg:p-12">
            <div class="w-full max-w-md">
                <!-- Mobile logo -->
                <div class="lg:hidden flex items-center gap-2.5 mb-10">
                    <div class="w-8 h-8 bg-white rounded-lg flex items-center justify-center">
                        <svg class="w-5 h-5 text-neutral-900" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                        </svg>
                    </div>
                    <span class="text-lg font-semibold">MCP Admin</span>
                </div>

                <div class="text-center mb-10">
                    <h2 class="text-2xl font-semibold mb-2">Sign in</h2>
                    <p class="text-neutral-500">Access the administration panel</p>
                </div>

                {% for message in app.flashes('error') %}
                <div class="mb-6 p-4 bg-red-900/30 border border-red-800 rounded-lg text-red-200 text-sm">
                    {{ message }}
                </div>
                {% endfor %}

                {% for message in app.flashes('info') %}
                <div class="mb-6 p-4 bg-blue-900/30 border border-blue-800 rounded-lg text-blue-200 text-sm">
                    {{ message }}
                </div>
                {% endfor %}

                <!-- Google Sign In Button -->
                <a href="{{ path('admin_login_redirect') }}"
                   class="flex items-center justify-center gap-3 w-full bg-neutral-900 text-neutral-100 font-medium py-3 px-4 rounded-lg border border-neutral-700 hover:bg-neutral-800 hover:border-neutral-600 transition-colors focus:outline-none focus:ring-2 focus:ring-neutral-500 focus:ring-offset-2 focus:ring-offset-neutral-950">
                    <svg class="w-5 h-5" viewBox="0 0 24 24">
                        <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                        <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                        <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                        <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
                    </svg>
                    Continue with Google
                </a>

                <!-- Signup Link -->
                <div class="mt-8 pt-6 border-t border-neutral-800 text-center">
                    <p class="text-sm text-neutral-500">
                        Don't have an account?
                        <a href="{{ path('admin_signup') }}" class="text-neutral-300 hover:text-white transition-colors">
                            Create an organization
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>